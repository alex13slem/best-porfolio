---
export const prerender = false;

import Button from '@/components/ui/firm-button';
import AdminLayout from '@/layouts/admin-layout.astro';
import { createAstroServerClient } from '@/lib/supabase/createAstroServerClient';
import DataTable from '@/components/tables/projects/data-table';
import { getUser } from '@/lib/utils';
import { getProjects } from '@/lib/drizzle/queries/projects';
import SeoFragment from '@/components/seo-fragment.astro';

const supabase = createAstroServerClient(Astro);

const user = await getUser(supabase);
if (!user) {
  console.log('User is not logged in');
  return Astro.redirect('/auth/login');
}

const projects = await getProjects();
---

<AdminLayout>
  <SeoFragment
    slot="seo"
    title="Проекты"
    imageUrls={{ fb: '' }}
    noindex
  />
  <div class="flex justify-between items-center">
    <h1 class="text-4xl">Проекты</h1>
    <Button variant={'fill'} className="relative">
      <a href="/admin/projects/create" class="absolute inset-0"></a>
      Создать новый
    </Button>
  </div>
  <DataTable data={projects} className="mt-5" client:load />
</AdminLayout>
